{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "rootDir": "src",
    "outDir": "dist",
    "jsx": "react",
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
